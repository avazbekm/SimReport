<Window x:Class="SimReport.Windows.Reports.Companies.CompanyReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimReport.Windows.Reports.Companies"
        mc:Ignorable="d"
        Title="Kompaniya hisobot oynasi" 
        Height="450" 
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20 15">
            <DataGrid x:Name="dataGrid" 
                      AutoGenerateColumns="False"
                      CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mobiuz" Binding="{Binding Mobiuz}" Width="100"/>
                    <DataGridTextColumn Header="Beeline" Binding="{Binding Beeline}" Width="100"/>
                    <DataGridTextColumn Header="Ucell" Binding="{Binding Ucell}" Width="100"/>
                    <DataGridTextColumn Header="Uzmobayl" Binding="{Binding Uzmobayl}" Width="100"/>
                    <DataGridTextColumn Header="Humans" Binding="{Binding Humans}" Width="100"/>
                    <DataGridTextColumn Header="Jami" Binding="{Binding Total}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
    </Grid>
</Window>
