<Window x:Class="SimReport.Windows.Companies.CompanyCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimReport.Windows.Companies"
        mc:Ignorable="d"
        Title="Company Create Window" Height="500" Width="300"
        WindowStartupLocation="CenterScreen">
    <Border Background="{DynamicResource PrimaryBorderColor}">
        <StackPanel >
            <Label Height="30" 
                   Margin="10 10 10 0"
                   Content="Name"
                   FontSize="16"
                   Background="{DynamicResource SecondaryBackground}"/>
            <TextBox Height="40" 
                     Margin="10 0 10 10"
                     Background="{DynamicResource PrimaryBackground}" 
                     FontSize="16"
                     FontFamily="New Time"
                     Padding="8 9 5 5"/>



        </StackPanel>
    </Border>
</Window>
